pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
    
        stage ("terraform init") {
            steps {
                sh '''
                cd Terraform/VPC_TF
                ls -l
                terraform init
                '''
            }
        }
        
        stage ("plan") {
            steps {
                sh '''
                cd Terraform/VPC_TF
                ls -l
                terraform plan -var "Name=$Name" -var="access_key=${access_key}" -var="secret_access_key=${secret_access_key}"
                '''
            }
        }

        stage ("Action") {
            steps {
                sh '''
                echo "Terraform action is --> ${action}"
                cd Terraform/VPC_TF
                ls -l
                terraform ${action} -auto-approve -var "Name=$Name" -var="access_key=${access_key}" -var="secret_access_key=${secret_access_key}"
                '''
           }
        }
    }
}
    
